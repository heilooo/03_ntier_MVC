@model CoverType
@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>ویرایش کاور تایپ</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">ارسال</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary style="width:150px">بازگشت به لیست</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}